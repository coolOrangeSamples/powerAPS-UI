<wpf:ThemedWPFWindow xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wpf="clr-namespace:Autodesk.DataManagement.Client.Framework.Forms.Controls.WPF;assembly=Autodesk.DataManagement.Client.Framework.Forms"
    Title="Autodesk Platform Services Authentication" 
    Height="380" MinHeight="380" MaxHeight="400" Width="650" MinWidth="650" MaxWidth="750" FontFamily="Segoe UI" FontSize="12.5"
    Icon="pack://application:,,,/powerAPS.Utils;component/Resources/coolorange.ico"
    WindowStartupLocation="CenterOwner" Topmost="False">

    <wpf:ThemedWPFWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Autodesk.DataManagement.Client.Framework.Forms;component/Controls/WPF/ControlTemplates/MergedResources.xaml" />
                <ResourceDictionary Source="pack://application:,,,/powerAPS.Utils;component/Controls/WPF/ImageResources.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Themed PasswordBox style (missing in Autodesk.DataManagement.Client.Framework.Forms) -->
            <Style x:Key="ThemedPasswordBoxStyle" TargetType="{x:Type PasswordBox}" BasedOn="{StaticResource ThemedBaseControlStyle}">
                <Setter Property="Height" Value="28" />
                <Setter Property="Control.Background" Value="{DynamicResource TextBox.Background}"/>
                <Setter Property="Control.BorderBrush" Value="{DynamicResource TextBox.Static.Border}"/>
                <Setter Property="Control.Foreground" Value="{DynamicResource TextBox.Foreground}"/>
                <Setter Property="Control.BorderThickness" Value="1"/>

                <Setter Property="KeyboardNavigation.TabNavigation" Value="None"/>
                <Setter Property="Control.HorizontalContentAlignment" Value="Left"/>
                <Setter Property="FrameworkElement.FocusVisualStyle" Value="{x:Null}"/>
                <Setter Property="UIElement.AllowDrop" Value="true"/>
                <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst"/>
                <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>

                <Setter Property="Control.Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type PasswordBox}">
                            <Border x:Name="border"
                                BorderBrush="{TemplateBinding Control.BorderBrush}"
                                BorderThickness="{TemplateBinding Control.BorderThickness}"
                                Background="{TemplateBinding Control.Background}"
                                SnapsToDevicePixels="True">
                                <!-- PasswordBox uses the same PART_ContentHost name -->
                                <ScrollViewer x:Name="PART_ContentHost"
                                    Focusable="false"
                                    HorizontalScrollBarVisibility="Hidden"
                                    VerticalScrollBarVisibility="Hidden"/>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="UIElement.IsEnabled" Value="false">
                                    <Setter TargetName="border" Property="UIElement.Opacity" Value="0.56"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>

                <Style.Triggers>
                    <!-- Validation error styling -->
                    <Trigger Property="Validation.HasError" Value="true">
                        <Setter Property="FrameworkElement.ToolTip" 
                            Value="{Binding (Validation.Errors)[0].ErrorContent,
                            RelativeSource={RelativeSource Self}}"/>
                        <Setter Property="Control.BorderBrush" Value="Red"/>
                    </Trigger>

                    <Trigger Property="Validation.HasError" Value="false"/>
                </Style.Triggers>

                <Style.Resources>
                    <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource ThemedScrollBarStyle}"/>
                </Style.Resources>
            </Style>
            <Style TargetType="{x:Type PasswordBox}" BasedOn="{StaticResource ThemedPasswordBoxStyle}"/>
            <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource ThemedTextBoxStyle}">
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="Margin" Value="1" />
                <Setter Property="Height" Value="28" />
            </Style>
            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource ThemedButtonStyle}">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="Height" Value="29" />
            </Style>
            <Style TargetType="{x:Type Label}" BasedOn="{StaticResource ThemedLabelStyle}">
                <Setter Property="FontSize" Value="12" />
            </Style>
            <Style TargetType="{x:Type RadioButton}" BasedOn="{StaticResource ThemedRadioButtonBaseStyle}">
                <Setter Property="FontSize" Value="12" />
            </Style>
        </ResourceDictionary>
    </wpf:ThemedWPFWindow.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="32" />
            <RowDefinition Height="32" />
        </Grid.RowDefinitions>

        <GroupBox Header="Autodesk Platform Services Application" Grid.Row="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="26" />
                    <RowDefinition Height="24" />
                    <RowDefinition Height="24" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="24" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="24" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>

                <Label Content="Application Type" Grid.Column="0" Grid.Row="0" />
                <StackPanel Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" Orientation="Horizontal">
                    <RadioButton x:Name="Traditional"
                                 Content="Traditional Web App"
                                 GroupName="AppType"
                                 IsChecked="True"
                                 Margin="2,0,0,0"/>
                    <RadioButton x:Name="Pkce"
                                 Content="Desktop, Mobile, Single-Page App"
                                 GroupName="AppType"
                                 IsChecked="{Binding Pkce}"
                                 Margin="20,0,0,0"/>
                </StackPanel>


                <Label Content="Client ID" Grid.Column="0" Grid.Row="2" />
                <TextBox x:Name="ClientId" Text="{Binding ClientId}" Grid.Column="0" Grid.Row="3" />

                <Label Content="Client Secret" Grid.Column="0" Grid.Row="4" />
                <PasswordBox x:Name="ClientSecret" Grid.Column="0" Grid.Row="5" >
                    <PasswordBox.Style>
                        <Style TargetType="PasswordBox" BasedOn="{StaticResource ThemedPasswordBoxStyle}">
                            <Setter Property="IsEnabled" Value="True" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsChecked, ElementName=Pkce}" Value="True">
                                    <Setter Property="IsEnabled" Value="False" />
                                    <Setter Property="PasswordChar" Value=""></Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </PasswordBox.Style>
                </PasswordBox>

                <Label Content="Callback URL" Grid.Column="0" Grid.Row="6" />
                <TextBox x:Name="CallbackUrl" Text="{Binding CallbackUrl}" Grid.Column="0" Grid.Row="7" />

                <Label Content="Available Scopes" Grid.Column="2" Grid.Row="0" />
                <DataGrid Grid.Column="2" Grid.RowSpan="7" Grid.Row="1" AutoGenerateColumns="False" HorizontalScrollBarVisibility="Disabled" 
                          CanUserAddRows="False" CanUserReorderColumns="False" CanUserResizeRows="False" Focusable="False" ItemsSource="{Binding Scope}" HeadersVisibility="None" GridLinesVisibility="None">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding Path=Checked, UpdateSourceTrigger=PropertyChanged}" IsEnabled="False" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Binding="{Binding Name}" Header="Scope Values" Width="1*" FontSize="12" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="Test" Grid.Column="0" Width="160" HorizontalAlignment="Left" Margin="0,0,0,0" IsEnabled="True">
                Test Connection...
            </Button>
        </Grid>

        <Grid Grid.Row="3" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="170" />
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="GoToMyApps" Grid.Column="0" Width="160" HorizontalAlignment="Left" VerticalAlignment="Center">My Applications...</Button>
            <Button x:Name="GoToDocs" Grid.Column="1" Width="160" HorizontalAlignment="Left" VerticalAlignment="Center">Documentation...</Button>
            <Button x:Name="Ok" Grid.Column="3" Width="100" Margin="0,0,10,0">OK</Button>
            <Button x:Name="Cancel" Grid.Column="4" Width="100" IsCancel="True">Cancel</Button>
        </Grid>
    </Grid>
</wpf:ThemedWPFWindow>