<wpf:ThemedWPFWindow xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wpf="clr-namespace:Autodesk.DataManagement.Client.Framework.Forms.Controls.WPF;assembly=Autodesk.DataManagement.Client.Framework.Forms"
    Title="Select Project" 
    Height="220" MinHeight="220" Width="400" MinWidth="450" FontFamily="Segoe UI" FontSize="12.5"
    Icon="pack://application:,,,/powerAPS.Utils;component/Resources/coolorange.ico"                     
    WindowStartupLocation="CenterOwner">

    <wpf:ThemedWPFWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Autodesk.DataManagement.Client.Framework.Forms;component/Controls/WPF/ControlTemplates/MergedResources.xaml" />
                <ResourceDictionary Source="pack://application:,,,/powerAPS.Utils;component/Controls/WPF/ImageResources.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource ThemedComboBoxStyle}">
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="Margin" Value="1" />
                <Setter Property="Height" Value="28" />
            </Style>
            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource ThemedButtonStyle}">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="Height" Value="29" />
            </Style>
            <Style TargetType="{x:Type Label}" BasedOn="{StaticResource ThemedLabelStyle}">
                <Setter Property="FontSize" Value="12" />
            </Style>
        </ResourceDictionary>
    </wpf:ThemedWPFWindow.Resources>
 
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" x:Name="Label" Content="Select Autodesk Account (Hub):" />
        <ComboBox TextSearch.TextPath="Hub.Name" x:Name="Hub" Grid.Row="1" VerticalAlignment="Top" IsEditable="False">
            <ComboBox.ItemTemplate>
                <ItemContainerTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="17" Height="16" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,5,0">
                            <Image.Style>
                                <Style TargetType="{x:Type Image}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Type}" Value="Fusion">
                                            <Setter Property="Source" Value="{StaticResource FusionLogo}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Type}" Value="ACC">
                                            <Setter Property="Source" Value="{StaticResource DocsLogo}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                        <TextBlock Text="{Binding Path=Hub.Name}" />
                    </StackPanel>
                </ItemContainerTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Label Grid.Row="2" Content="Select Project:" />
        <ComboBox TextSearch.TextPath="Project.attributes.name" x:Name="Project" Grid.Row="3" VerticalAlignment="Top" SelectedValuePath="Project" IsEditable="False">
            <ComboBox.ItemTemplate>
                <ItemContainerTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="16" Height="16" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,5,0">
                            <Image.Style>
                                <Style TargetType="{x:Type Image}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Type}" Value="Fusion">
                                            <Setter Property="Source" Value="{StaticResource FusionLogo}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Type}" Value="ACC">
                                            <Setter Property="Source" Value="{StaticResource AccProjectImage}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Type}" Value="BIM360">
                                            <Setter Property="Source" Value="{StaticResource Bim360ProjectImage}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                        <TextBlock ><Run Text="{Binding Path=Project.attributes.name}"/></TextBlock>
                    </StackPanel>
                </ItemContainerTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="Ok" Grid.Column="1" Width="100" Margin="0,0,10,0">
                <Button.Style>
                    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource ThemedButtonStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedValue, ElementName=Project}" Value="{x:Null}">
                                <Setter Property="IsEnabled" Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                OK
            </Button>
            <Button x:Name="Cancel" Grid.Column="2" Width="100" IsCancel="True">Cancel</Button>
        </Grid>
    </Grid>
</wpf:ThemedWPFWindow>